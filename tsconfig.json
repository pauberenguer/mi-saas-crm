{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js 15 – estricto (JSX automático)",
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "dom",
      "dom.iterable",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "react",
      "react/jsx-runtime",
      "node"
    ],
    "allowUmdGlobalAccess": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}